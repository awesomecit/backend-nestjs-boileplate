# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and adjust values for your environment
# Never commit .env files to version control

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
APP_PORT=3000
APP_HOST=localhost
APP_NAME=backend-nestjs-boilerplate

# =============================================================================
# MONITORING PORTS CONFIGURATION
# =============================================================================
# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_HOST=localhost

# Grafana
GRAFANA_PORT=3000
GRAFANA_HOST=localhost
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# Node Exporter
NODE_EXPORTER_PORT=9100
NODE_EXPORTER_HOST=localhost

# NGINX Exporter
NGINX_EXPORTER_PORT=9113
NGINX_EXPORTER_HOST=localhost

# Portainer (optional)
PORTAINER_PORT=9000
PORTAINER_HOST=localhost

# NGINX
NGINX_PORT=80
NGINX_HOST=localhost

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=nestjs_db
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# Test Database
TEST_DATABASE_HOST=localhost
TEST_DATABASE_PORT=5433
TEST_DATABASE_NAME=nestjs_test_db
TEST_DATABASE_USER=test
TEST_DATABASE_PASSWORD=test
TEST_DATABASE_URL=postgresql://${TEST_DATABASE_USER}:${TEST_DATABASE_PASSWORD}@${TEST_DATABASE_HOST}:${TEST_DATABASE_PORT}/${TEST_DATABASE_NAME}

# =============================================================================
# DOCKER SWARM CONFIGURATION
# =============================================================================
DOCKER_STACK_NAME=monitoring
COMPOSE_PROJECT_NAME=backend-nestjs

# =============================================================================
# EXTERNAL SERVICES CONFIGURATION
# =============================================================================
# Add your external service URLs here
# REDIS_URL=redis://localhost:6379
# ELASTICSEARCH_URL=http://localhost:9200
# RABBITMQ_URL=amqp://localhost:5672

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your-secret-key-here
JWT_EXPIRY=3600
API_KEY=your-api-key-here

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
TEST_TIMEOUT=30000
BATS_TEST_TIMEOUT=120
SMART_TESTING_ENABLED=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
